<div class="login-popup" id="loginPopup">
  <div class="login-form">
    <div class="filter">
      <div class="login-input">
        <div class="icon">
          <div class="image">
            <img src="https://i.ibb.co/FgXvct5/logo1.png" />
          </div>
        </div>
        <button id="close-login-btn"><i class="fas fa-times"></i></button>
        <div class="login-sign-up">
          <div class="login" id="loginForm">
            <form action="post">
              <div class="input-container">
                <input
                  type="text"
                  name="login_email"
                  id="login_email"
                  placeholder="Email"
                />
              </div>
              <div class="input-container">
                <input
                  type="password"
                  name="login_password"
                  id="login_password"
                  placeholder="Mật khẩu"
                />
              </div>
              <input type="button" id="loginSubmit" value="Đăng nhập" />
              <p style="text-align: center;" id="login_msg"></p>
            </form>
          </div>
          <div class="signup" id="signupForm">
            <form action="post">
              <div class="input-container">
                <input
                  type="text"
                  name="name"
                  id="name"
                  placeholder="Họ và tên"
                />
              </div>
              <div class="input-container">
                <input
                  type="number"
                  name="phone"
                  id="phone"
                  placeholder="Số điện thoại"
                />
              </div>
              <div class="input-container">
                <input
                  type="text"
                  name="email"
                  id="email"
                  placeholder="Email"
                />
              </div>
              <div class="input-container">
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Mật khẩu"
                />
              </div>
              <input type="button" id="signupSubmit" value="Đăng ký" />
              <p style="text-align: center;" id="signup_msg"></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

